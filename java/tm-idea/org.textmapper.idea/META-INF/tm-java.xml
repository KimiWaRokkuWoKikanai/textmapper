	<project-components>
		<component>
			<implementation-class>org.textmapper.idea.java.GeneratedFilesRefresher</implementation-class>
		</component>
	</project-components>
	<extensions defaultExtensionNs="com.intellij">
		<compileServer.plugin classpath="jps/tm-jps-plugin.jar;tm-common.jar;textmapper-0.10.1.jar"/>
	</extensions>
	<extensions defaultExtensionNs="org.textmapper.idea">
		<templatesHandler implementation="org.textmapper.idea.java.JavaTemplatesHandler"/>
	</extensions>
</idea-plugin>
